{
  "tasks": [
    {
      "schedule": {
        "interval": "5s"
      },
      "collect": {
        "plugin": "disk",
        "metrics": {
          "/intel/procfs/disk/*": {}
        },
        "config": {
          "proc_path": "/proc"
        }
      },
      "publish": [
        "json",
        "influxdb"
      ]
    }
  ],
  "publish": [
    {
      "name": "json",
      "plugin": "file",
      "config": {
        "file": "/tmp/node-agent-collect-disk.json"
      }
    },
    {
      "name": "influxdb",
      "plugin": "influxdb",
      "config": {
        "host": "localhost",
        "scheme": "http",
        "port": 8086,
        "user": "root",
        "password": "default",
        "database":  "snap",
        "retention": "autogen",
        "skip-verify": false,
        "isMultiFields": false
      }
    }
  ]
}